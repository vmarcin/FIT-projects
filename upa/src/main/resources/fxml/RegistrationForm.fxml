<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="292.0" prefWidth="488.0" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200">
        </ColumnConstraints>
    </columnConstraints>
   <children>
      <TextField fx:id="passwordFieldVisible" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
       <!-- Add Header Label -->
       <Label text="Database connection" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
           <font>
               <Font size="24.0" />
           </font>
           <GridPane.margin>
               <Insets bottom="20" left="0" right="0" top="20" />
           </GridPane.margin>
       </Label>

       <!-- Add Name Label -->
       <Label text="Username : " GridPane.columnIndex="0" GridPane.rowIndex="1" />
       <!-- Add Name Text Field -->
       <!-- text="xzubri00"  -->
       <TextField fx:id="nameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />

       <!-- Add Password Label -->
       <Label text="Password : " GridPane.columnIndex="0" GridPane.rowIndex="2" />
       <!-- Add Email Text Field -->
       <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="292.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

       <!-- Add Submit Button -->
       <Button fx:id="submitButton" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
           <GridPane.margin>
               <Insets bottom="20" left="0" right="0" top="20" />
           </GridPane.margin>
       </Button>
      <HBox prefHeight="18.0" prefWidth="308.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <children>
            <Label prefHeight="15.0" prefWidth="312.0" text="Show password characters ?" />
            <CheckBox fx:id="passToggle" mnemonicParsing="false" prefHeight="18.0" prefWidth="0.0" />
         </children>
      </HBox>
   </children>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
